<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ListView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvCities" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_above="@+id/btnCitiesOk"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/btnCitiesOk" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:onClick="onCitiesClickOk"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/btnCitiesReset" android:layout_alignTop="@+id/btnCitiesOk" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:onClick="onCitiesClickReset"/>
</RelativeLayout>